# {{ansible_managed}}

[{{item.name}}]

listen = {{php_fpm_var_dir}}/fpm-{{item.name}}.sock
listen.owner = {{php_fpm_user}}
listen.group = {{php_fpm_group}}
listen.mode = 0660

user = {{item.user}}
group = {{item.group}}

pm = dynamic
pm.max_children = 75
pm.start_servers = 10
pm.min_spare_servers = 5
pm.max_spare_servers = 20
pm.max_requests = 500

chdir = {{item.path}}
